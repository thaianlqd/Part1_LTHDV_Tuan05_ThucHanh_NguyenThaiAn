<%- include("../partials/header") %>

<div class="container my-4">
  <div class="card mx-auto" style="max-width: 400px;">
    <div class="card-body">
      <h2 class="card-title text-center mb-4 text-dark">Thêm Sản phẩm</h2>
      <form action="/products" method="POST">
        <div class="mb-3">
          <label for="name" class="form-label">Tên</label>
          <input type="text" class="form-control" id="name" name="name" placeholder="Tên sản phẩm" required>
        </div>

        <div class="mb-3">
          <label for="price" class="form-label">Giá</label>
          <input type="number" step="0.01" class="form-control" id="price" name="price" placeholder="Giá">
        </div>

        <div class="mb-3">
          <label for="quantity" class="form-label">Số lượng</label>
          <input type="number" class="form-control" id="quantity" name="quantity" placeholder="Số lượng">
        </div>

        <div class="mb-3">
          <label for="supplier" class="form-label">Nhà cung cấp</label>
          <select id="supplier" name="supplier" class="form-select">
            <option value="">-- Chọn nhà cung cấp --</option>
            <% suppliers.forEach(s => { %>
              <option value="<%= s._id %>"><%= s.name %></option>
            <% }) %>
          </select>
        </div>

        <button type="submit" class="btn btn-primary w-100 mt-3">Thêm</button>
      </form>
    </div>
  </div>
</div>

<%- include("../partials/footer") %>
