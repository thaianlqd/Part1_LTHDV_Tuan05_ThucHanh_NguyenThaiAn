<%- include("../partials/header") %>

<h2>Danh sách Sản phẩm</h2>
<a href="/products/new">Thêm mới</a>

<table>
  <thead>
    <tr>
      <th>Tên</th>
      <th>Giá</th>
      <th>Số lượng</th>
      <th>Nhà cung cấp</th>
      <th>Hành động</th>
    </tr>
  </thead>
  <tbody>
    <% if (products.length === 0) { %>
      <tr><td colspan="5">Không có sản phẩm nào.</td></tr>
    <% } %>
    <% products.forEach(p => { %>
      <tr>
        <td><%= p.name %></td>
        <td><%= p.price != null ? p.price : "" %></td>
        <td><%= p.quantity != null ? p.quantity : "" %></td>
        <td><%= p.supplier ? p.supplier.name : "—" %></td>
        <td>
          <a href="/products/<%= p._id %>/edit">Sửa</a>
          <form action="/products/<%= p._id %>?_method=DELETE" method="POST" style="display:inline;">
            <button type="submit" data-confirm> Xóa </button>
          </form>
        </td>
      </tr>
    <% }) %>
  </tbody>
</table>

<%- include("../partials/footer") %>
