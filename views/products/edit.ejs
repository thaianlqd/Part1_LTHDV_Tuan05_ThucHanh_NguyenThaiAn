<%- include("../partials/header") %>

<div class="form-container">
  <h2>Sửa Sản phẩm</h2>
  <form action="/products/<%= product._id %>?_method=PUT" method="POST">
    <label for="name">Tên</label>
    <input type="text" id="name" name="name" value="<%= product.name %>" required>

    <label for="price">Giá</label>
    <input type="number" id="price" step="0.01" name="price" value="<%= product.price %>">

    <label for="quantity">Số lượng</label>
    <input type="number" id="quantity" name="quantity" value="<%= product.quantity %>">

    <label for="supplier">Nhà cung cấp</label>
    <select id="supplier" name="supplier">
      <option value="">-- Chọn nhà cung cấp --</option>
      <% suppliers.forEach(s => { %>
        <option value="<%= s._id %>" <%= product.supplier && product.supplier.toString() === s._id.toString() ? "selected" : "" %>>
          <%= s.name %>
        </option>
      <% }) %>
    </select>

    <button type="submit">Cập nhật</button>
  </form>
</div>

<style>
  .form-container {
    max-width: 500px;
    margin: 30px auto;
    padding: 25px;
    background: #fff;
    border-radius: 8px;
    box-shadow: 0 4px 8px rgba(0,0,0,0.1);
  }

  .form-container h2 {
    text-align: center;
    margin-bottom: 20px;
    color: #343a40;
  }

  form label {
    display: block;
    margin-top: 12px;
    margin-bottom: 6px;
    font-weight: bold;
    color: #555;
  }

  form input, form select {
    width: 100%;
    padding: 10px;
    border-radius: 6px;
    border: 1px solid #ccc;
    font-size: 14px;
    transition: border-color 0.3s;
  }

  form input:focus, form select:focus {
    border-color: #007bff;
    outline: none;
  }

  button {
    margin-top: 20px;
    width: 100%;
    background-color: #007bff;
    border: none;
    padding: 12px;
    border-radius: 6px;
    color: #fff;
    font-size: 16px;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  button:hover {
    background-color: #0056b3;
  }
</style>

<%- include("../partials/footer") %>
